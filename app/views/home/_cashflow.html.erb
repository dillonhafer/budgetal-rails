<div class="row">
      <% @budget.budget_categories.order(:id).each do |c| %>
        <div class="nine columns">
          <ul class="accordion">
            <li class="active">
              <div class="title">      
                  <div class="six columns left">
                  <h5><%= c.name %> </h5>
                  </div>
                  <div class="two columns">
                    Spent
                  </div>
                  <div class="two columns">
                    Budgeted
                  </div>
                  <div class="two columns">
                    Difference
                  </div>
              </div>
              <div class="content">
                <hr />
                <% c.budget_items.order(:id).each do |bi| %>
                  <div class="row">
                    <%= form_for bi, html: {data: {remote: true}} do |f| %>
                    <div class="one columns">
                      <span class="bi-name">
                        <%= link_to '[+]', 'javascript:void(0)', class: 'show-expenses' %><%= is_envelope? bi %>
                      </span>

                      <span class="bi-name-input hide">
                        <label><%= f.check_box :envelope, style: 'float: left;' %><i class='general foundicon-mail blue'></i></label>
                      </span>
                    </div>
                    <div class="five columns">
                      <span class="bi-name"><%= bi.name %></span>
                      <span class="bi-name-input hide">                        
                        <%= f.text_field :name, class: 'required' %>
                      </span>
                    </div>
                    <div class="two columns budget-spent-<%= bi.id %>">
                      <%= number_to_currency bi.budget_item_expenses.sum :amount %>
                    </div>
                    <div class="two columns">
                      <div class="row">
                        <div class="eight columns">
                            <span class="bi-name blue"><%= number_to_currency bi.amount_budgeted %></span>                            
                            <span class="bi-name-input hide"><%= f.text_field :amount_budgeted, placeholder: "0.00", class: 'required' %></span>
                            <%= f.submit "save", class: 'tiny success nice button radius' %>
                            <%= link_to "cancel", 'javascript:void(0)', class: 'tiny success cancel alert nice button radius' %>
                        </div>
                        <div class="four columns">
                          <%= link_to 'x', budget_item_path(bi), method: :delete, class: 'delete-bi', data: {remote: true, confirm: 'Are you sure? This will delete all expenses too!'} %>
                        </div>
                      </div>
                    </div>
                    <div class="two columns budget-difference-<%= bi.id %>">
                      <%= render partial: 'budget_difference', locals: {bi: bi} %>
                    </div>
                    <% end %>
                  </div>
                  <div class="ajax-container expenses_<%= bi.id %> hide">
                    <%= render partial: 'budget_item_expenses', locals: {bi: bi} %>
                  </div>
                <% end %>
                <div class="row hide new-budget-item">
                <%= form_for BudgetItem.new, html: {data: {remote: true}} do |f| %>
                  <div class="one columns"><span class="bi-name-input"><label><%= f.check_box :envelope, style: 'float: left;' %><i class='general foundicon-mail blue'></i></label></span></div>
                  <div class="five columns">
                    <%= f.hidden_field :budget_category_id, value: c.id %>
                    <%= f.text_field :name, placeholder: 'Name', class: 'required' %>
                  </div>
                  <div class="two columns">
                    $0.00
                  </div>
                  <div class="two columns">
                    <div class="row">
                      <div class="eight columns">
                          <%= f.text_field :amount_budgeted, placeholder: "0.00", class: 'required' %>
                          <%= f.submit "save", class: 'tiny success nice button radius' %>
                          <%= link_to "cancel", 'javascript:void(0)', class: 'tiny success cancel alert nice button radius add-budget-cancel' %>
                      </div>                      
                    </div>
                  </div>
                  <div class="two columns"></div>
                <% end %>
                </div>
                <div class="row">
                  <div class="large-10 large-offset-2 columns"><%= link_to "Add a budget item", 'javascript:void(0)', class: 'add-budget-link small button nice radius' %></div>
                </div>
              </div>
            </li>
          </ul>
        </div>
        <div class="three columns">
          <h5>Percentage used:</h5>
          <%= c.budget.monthly_income.to_f > 0.0 ? (c.budget_items.sum(:amount_budgeted).to_f / c.budget.monthly_income.to_f * 100).round : "0" %>%
          
          <h5>Ideal:</h5>
          <%= c.percentage %>          
        </div>
      <% end %>      
    </div>