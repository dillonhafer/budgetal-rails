<h1><%= @date %></h1>

<%= form_for @budget, html: {data: {remote: true}} do |f| %>
  <div class="row">
    <div class="two columns" style="text-align: right;vertical-align: middle;line-height: 2.3;"><b><%= f.label :monthly_income, "Monthly Income: $" %></b></div>
    <div class='ten columns'><%= f.text_field :monthly_income, style: 'width: 100px;display:block' %></div>
  </div>
<% end %>

<p><%= number_to_currency @budget_remaining %> Remaining to budget</p>
