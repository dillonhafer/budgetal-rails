$('html, body').stop();
$('#category-<%= @budget_category.id %> .new-budget-item').html("<%= escape_javascript(render(partial: 'budget_item', locals: {c: @budget_category})) %>");
$('#category-<%= @budget_category.id %> .spent').html('Spent: <%= number_to_currency @budget_category.total_spent %>');
$('#category-<%= @budget_category.id %> .remaining').html('Remaining: <%= number_to_currency @budget_category.budget_remaining %>');
$('#category-<%= @budget_category.id %> .meter').css('width', '<%= @budget_category.percent_used %>%');
$('#category-<%= @budget_category.id %>').parent().parent().next('div').find('.p-budgeted').html('<%= @budget_category.percent_of_budget %>%');
$('#amount_spent').html("<%= number_to_currency @budget_category.budget.total_expenses %>");
$('#budget_difference').html("<%= number_to_currency @budget_category.budget.difference %>");
