          <dd class='photos  <%= "active-subnav" if subnav == 'photos' %>'><%= link_to image_tag('camera-256.png') + 'Photos', photo_albums_path(dwelling.pretty_url), title: 'Photos' %></dd>        
        </dl>
      </div>
    
  </div>
