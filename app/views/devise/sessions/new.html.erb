<style>
.join-section a {
  margin-top: 10%;
}
input[type="checkbox"] {
  margin-bottom: 0;
}
input[name="commit"] {
  width: 168px;
  margin-right: 34px
}

@media (max-width: 767px) {
  input[name="commit"] {
    margin-right: 0px;
  } 
}
</style>

<div class='row'>
  <div class='large-12 columns sign-in-section'>
    <h2>Sign in</h2>
    <hr />
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {data: {abide:''}}) do |f| %>
    <div class='clearfix'>
      <%= f.label :email, class: 'left' %>
      <% if devise_mapping.rememberable? -%>
        <label class='right' style='color:#000;'><%= f.check_box :remember_me, tabindex: 3 %> remember me</label>
      <% end -%>    

      <%= f.email_field :email, required:'', tabindex: 1 %>
      <small class="error">An email address is required.</small>
    </div>

    <div class='clearfix'>    
      <%= f.label :password, class: 'left' %><small class='right'><a id="hide_password" class='hidden_password' href="javascript:void(0)" /></a></small>
      <%= f.password_field :password, required:'', tabindex: 2 %>
      <small class="error">Password is required.</small>  
    </div>

    <div>
      <ul class="button-group radius">
        <li><%= f.submit "Sign in".html_safe, class: 'small button nice radius', tabindex: 4 %></li>

      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
        <li>
          <%= link_to omniauth_authorize_path(resource_name, provider), class: 'tiny facebook button nice radius ' do  %>
          <%= image_tag "fb.png", style: 'height: 24px; width: 24px' %> Sign in with Facebook<br />
          <% end %>
        </li>
        <% end -%>
      <% end -%>  
      </ul>
      <%= render "devise/shared/links" %>
    </div>
    <% end %>
    <a id="join" onclick="$('.sign-in-section').addClass('hide');$('.join-section').removeClass('hide');">Join Us</a>
  </div>
  <div class='large-12 columns hide join-section'>  
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>      
      <h2>Join</h2>
      <hr />                
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: {abide: ''}}) do |f| %>
        <%= devise_error_messages! %>

        <div>
          <%= f.label :email, for: 'new_user_email' %>
          <%= f.email_field :email, required:'', id: 'new_user_email', placeholder: 'email@example.org', tabindex: 5 %>
          <small class="error">An email address is required.</small>
        </div>
        
        <div class='clearfix'>    
          <%= f.label :password, for: 'new_user_password', class: 'left' %> <small class='right'><a id="hide_password" class='hidden_password' href="javascript:void(0)" /></a></small>
          <%= f.password_field :password, required:'', id: 'new_user_password', id: 'new_user_password', pattern: 'password', tabindex: 7 %>
          <small class="error">Passwords must be at least 8 characters with 1 capital letter, and 1 number.</small>
        </div>

        <div>
          <%= f.label :password_confirmation, for: 'new_user_password_confirmation' %>
          <%= f.password_field :password_confirmation, required:'', id: 'new_user_password_confirmation', data: {equalto:'new_user_password'}, tabindex: 8 %>
          <small class="error">Password confirmation must match.</small>
        </div>

        <div><%= f.submit "Sign up", class: 'small button nice radius', tabindex: 9 %></div>
      <% end %>        
    <% end -%>
    <a onclick="$('.sign-in-section').removeClass('hide');$('.join-section').addClass('hide')">Sign In</a>
  </div>
</div>

<script>
  $('form').foundation();
</script>
