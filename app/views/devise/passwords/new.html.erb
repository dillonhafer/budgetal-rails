<h2 class='blue'>Forgot your password?</h2>
<hr />
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: {abide: true} }) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, required: true %>
    <small class='error'>Email is required</small>
  </div>

  <div><%= f.submit "Send me reset password instructions", class: 'blue button radius expand' %></div>
<% end %>

<%= render "devise/shared/links" %>

<% if request.xhr? %>
  <script>$(document).foundation()</script>
<% end %>
