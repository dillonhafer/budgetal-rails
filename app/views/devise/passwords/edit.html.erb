<h2>Change your password</h2>
<hr />

<div class='large-6 columns'>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, data: {abide:''} }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <%= f.label :password, "New password", class: 'left' %> <small class='right'><a id="hide_password" href="javascript:void(0)" /></a></small><br />
      <%= f.password_field :password, autofocus: true, required:'' %>
      <small class="error">Passwords must be at least 8 characters with 1 capital letter, and 1 number.</small>    
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm new password", class: 'left' %><br />
      <%= f.password_field :password_confirmation, required:'', data: {equalto:'user_password'} %>
      <small class="error">Password confirmation must match.</small>
    </div>

    <div><%= f.submit "Change my password", class: 'blue button radius expand' %></div>
  <% end %>
</div>

<div class='large-6 columns'></div>
