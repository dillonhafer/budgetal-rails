      <%= render template: 'shared/tracking.html' %>
    <% end %>

  <%= yield %>
  <a class="close-reveal-modal">&#215;</a>
<% else %>
  <style>
    .footer,nav {display: none}
  </style>
  <div class='large-6 large-offset-3 columns text-center'><a href='/'><%= image_tag 'logo.png', style: 'height: 75px' %></a></div>
  <%= render template: "layouts/application.html.erb" %>
  <div class='row'></div>
<% end %>
