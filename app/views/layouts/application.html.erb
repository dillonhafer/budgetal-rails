<!DOCTYPE html>
  <head>
    <meta charset="utf-8" />
    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no, width=device-width" />  
    <title>Budgetal.com</title>
    
    <!-- Included CSS Files -->
    <%= stylesheet_link_tag    "application" %>
    
    <!-- Included JS Files  -->
    <%= javascript_include_tag "application" %>
      <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-39276937-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>  
    <%= csrf_meta_tags %>
  </head>
  <body>
      <% if flash[:notice] %>
        <div class='alert-box'><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:error] %>
        <div class='alert-box' style='background: red !important;'><%= flash[:error] %></div>
      <% end %>
      
      <nav class="top-bar">
        <ul>
          <!-- Title Area -->
          <li class="name">
            <h1>
              <%= link_to "Budgetal.com", root_path, :title => "Budgetal.com" %>
            </h1>
          </li>        
        </ul>

        <section>
          <!-- Left Nav Section -->
          <% if current_user %>
          <ul class="right">
            <li class=" show-for-medium-and-up"></li>
            <li>
                <%= link_to "Sign Out", logout_path, title: 'logout', title: 'Logout' %>
            </li>
          </ul>

          <ul class="right">
            <li class=" show-for-medium-and-up"></li>
            <li>
              <%= link_to "My Account [#{current_user.email}]", my_account_path, title: 'My Account' %>
            </li>
          </ul>

          <ul class="right">
            <li class=" show-for-medium-and-up"></li>
            <li>
                <%= link_to "Budgets", my_budgets_path(year: Date.today.year, month: Date.today.month), title: 'Budgets' %>
            </li>
          </ul>

          <% if current_user.admin? %>
          <ul class="right">
            <li class=" show-for-medium-and-up"></li>
            <li>
                <%= link_to "Admin Panel", admin_path, title: 'Admin' %>
            </li>
          </ul>
          <% end %>

          <% else %>

          <ul class="right">
            <li class=" show-for-medium-and-up"></li>
            <li>
                <%= link_to "Sign In", "#", data: {reveal_id: "signInUp"}, title: "Sign In" %>
            </li>
          </ul>

          <% end %>
        </section>
      </nav>
    
  <div id="contentmain" class="row">
    <div class="twelve columns">
      <%= yield %>
    </div>
  </div>
  </body>
</html>
